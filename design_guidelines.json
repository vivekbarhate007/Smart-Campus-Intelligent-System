      "scale": {
        "h1": "text-5xl md:text-6xl font-bold tracking-tight",
        "h2": "text-4xl md:text-5xl font-semibold tracking-tight",
        "h3": "text-2xl md:text-3xl font-medium",
        "h4": "text-xl font-semibold",
        "body_lg": "text-lg leading-relaxed",
        "body_base": "text-base leading-relaxed text-muted-foreground",
        "caption": "text-sm text-muted-foreground/80",
        "tiny": "text-xs font-mono uppercase tracking-wider"
      },
      "installation_instructions": "Import fonts in index.css: @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=JetBrains+Mono:wght@400;500&family=Outfit:wght@300;400;500;700;900&display=swap');"
    },
    "colors": {
      "palette": {
        "base": {
          "background": "#020617", 
          "foreground": "#F8FAFC",
          "card": "rgba(30, 41, 59, 0.4)",
          "border": "rgba(148, 163, 184, 0.1)"
        },
        "brand": {
          "primary": "#7C3AED", 
          "primary_foreground": "#FFFFFF",
          "secondary": "#0EA5E9",
          "secondary_foreground": "#FFFFFF",
          "accent": "#F472B6"
        },
        "functional": {
          "success": "#10B981",
          "warning": "#F59E0B",
          "danger": "#EF4444",
          "info": "#3B82F6",
          "risk_high": "#FF3B30",
          "risk_medium": "#FFCC00",
          "risk_low": "#34C759"
        }
      },
      "gradients": {
        "primary": "linear-gradient(135deg, #7C3AED 0%, #0EA5E9 100%)",
        "surface": "linear-gradient(180deg, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0) 100%)",
        "glow": "radial-gradient(circle at center, rgba(124, 58, 237, 0.15) 0%, transparent 70%)"
      }
    },
    "spacing": {
      "container_padding": "p-6 md:p-8 lg:p-12",
      "section_gap": "gap-8 md:gap-12",
      "card_padding": "p-6"
    },
    "visual_enhancers": {
      "glassmorphism": {
        "default": "backdrop-blur-xl bg-slate-900/40 border border-slate-700/30 shadow-xl",
        "heavy": "backdrop-blur-2xl bg-slate-950/60 border border-slate-800/50",
        "hover": "hover:bg-slate-800/50 hover:border-slate-600/50 transition-all duration-300"
      },
      "borders": {
        "default": "border border-border/40",
        "glow": "border border-primary/50 shadow-[0_0_15px_rgba(124,58,237,0.3)]"
      },
      "shadows": {
        "card": "0 8px 32px 0 rgba(0, 0, 0, 0.3)",
        "neon": "0 0 10px rgba(124, 58, 237, 0.5), 0 0 20px rgba(14, 165, 233, 0.3)"
      },
      "rounded": {
        "card": "rounded-2xl",
        "button": "rounded-full",
        "badge": "rounded-md"
      }
    }
  },
  "layout_strategies": {
    "dashboard_grid": {
      "type": "Bento Grid",
      "className": "grid grid-cols-1 md:grid-cols-4 lg:grid-cols-12 gap-6",
      "areas": {
        "hero_kpi": "col-span-1 md:col-span-4 lg:col-span-8 row-span-2",
        "side_chart": "col-span-1 md:col-span-4 lg:col-span-4 row-span-2",
        "feed": "col-span-1 md:col-span-2 lg:col-span-4 row-span-2"
      }
    },
    "student_explorer": {
      "type": "High Density",
      "className": "w-full overflow-hidden rounded-xl border border-slate-800 bg-slate-950/50 backdrop-blur"
    }
  },
  "components": {
